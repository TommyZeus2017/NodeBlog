<!-- views/users/edit.ejs -->

<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <header>
            <% include ../partials/header %>
        </header>
        <div class="users">
            <!-- main start -->

            <div class="edit">
                <h3>Update User Information</h3>
                <form class="users_form" action="/users/<%= user._id %>?_method=put" method="post">
                    <label for="">Current Password* <span id="password_error" class="error_message"><%= passwordError?passwordError:"" %></span></label>
                    <input type="password" id="password" name="user[password]" value="">
                    <hr><br>
                    <label for="">Email* <span id="email_error" class="error_message"><%= emailError?emailError:"" %></span></label>
                    <input type="text" id="email" name="user[email]" value="<%= formData?formData.email:(user?user.email:"") %>">
                    <label for="">Nickname* <span id="nickname_error" class="error_message"><%= nicknameError?nicknameError:"" %></span></label>
                    <input type="text" id="nickname" name="user[nickname]" value="<%= formData?formData.nickname:(user?user.nickname:"") %>">
                    <label for="">New Password></label>
                    <input type="password" id="new_password" name="user[newPassword]" value="">
                    <label for="">Password Confirmation <span id="password_confirmation_error" class="error_message"></span></label>
                    <input type="password" id="password_confirmation" name="user[passwordConfirmation]" value="">
                    <p><small>*Required</small></p>
                    <button class="submit_btn" type="submit">Submit</button>
                </form>
                <a href="javascript:history.back()"><button>Back</button></a>
            </div>

            <!-- javascript -->
            <script type="text/javascript" src="/js/userform.js"></script>

            <!-- main end -->
        </div> <!-- login end -->
        <footer>
            <% include ../partials/footer %>
        </footer>
    </body>
</html>
